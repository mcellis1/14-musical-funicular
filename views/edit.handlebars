<form id="edit-form">
    <div class="form-group">
        <label for="title">title</label>
        <textarea type="title" class="form-control" id="title-input" maxlength="50">{{title}}</textarea>
    </div>
    <div class="form-group">
        <label for="body">body</label>
        <textarea class="form-control" id="body-input" rows="4">{{body}}</textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-info">update</button>
    </div>
</form>

<script src="/js/edit.js"></script>